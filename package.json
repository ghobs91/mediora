{
  "name": "mediora",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "android": "npx react-native run-android",
    "ios": "npx react-native run-ios",
    "ios-mobile": "npx react-native run-ios --scheme mediora-mobile",
    "tvos": "npx react-native run-ios --scheme mediora --simulator 'Apple TV'",
    "macos": "xcodebuild -workspace ios/mediora.xcworkspace -scheme mediora-mobile -destination 'platform=macOS,variant=Mac Catalyst' build",
    "lint": "eslint .",
    "start": "npx react-native start",
    "test": "jest",
    "generate-icons": "./scripts/generate-all-icons.sh",
    "generate-tvos-icons": "./scripts/generate-tvos-icons.sh",
    "capture-screenshots": "./scripts/capture-screenshots.sh",
    "fastlane:tvos:beta": "cd fastlane && bundle exec fastlane tvos beta",
    "fastlane:tvos:release": "cd fastlane && bundle exec fastlane tvos release",
    "fastlane:ios:beta": "cd fastlane && bundle exec fastlane ios beta",
    "archive:tvos": "xcodebuild -workspace ios/mediora.xcworkspace -scheme mediora -destination 'generic/platform=tvOS' -archivePath build/Mediora-tvOS.xcarchive archive",
    "archive:ios": "xcodebuild -workspace ios/mediora.xcworkspace -scheme mediora-mobile -destination 'generic/platform=iOS' -archivePath build/Mediora-iOS.xcarchive archive",
    "validate": "./scripts/validate-submission.sh"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native/new-app-screen": "0.83.0",
    "@react-navigation/bottom-tabs": "^7.9.0",
    "@react-navigation/native": "^7.1.26",
    "@react-navigation/native-stack": "^7.9.0",
    "pako": "^2.1.0",
    "react": "19.2.0",
    "react-native": "npm:react-native-tvos@0.83.0-0",
    "react-native-safe-area-context": "^5.5.2",
    "react-native-screens": "^4.19.0",
    "react-native-vector-icons": "^10.3.0",
    "react-native-video": "^6.18.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/preset-env": "^7.25.3",
    "@babel/runtime": "^7.25.0",
    "@react-native-community/cli": "20.0.0",
    "@react-native-community/cli-platform-android": "20.0.0",
    "@react-native-community/cli-platform-ios": "20.0.0",
    "@react-native/babel-preset": "0.83.0",
    "@react-native/eslint-config": "0.83.0",
    "@react-native/metro-config": "0.83.0",
    "@react-native/typescript-config": "0.83.0",
    "@types/jest": "^29.5.13",
    "@types/pako": "^2.0.4",
    "@types/react": "^19.2.0",
    "@types/react-native-vector-icons": "^6.4.18",
    "@types/react-test-renderer": "^19.1.0",
    "eslint": "^8.19.0",
    "jest": "^29.6.3",
    "prettier": "2.8.8",
    "react-test-renderer": "19.2.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=20"
  }
}
